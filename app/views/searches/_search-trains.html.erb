<table class='table'>
  <% trains.each do |train| %>
    <tr>
      <td>
        <%= link_to train_path(train.id) do %>
          <%= attachment_image_tag(train, :train_image, size: "50x50", fallback: "no_image.jpg") %>
        <% end %>
      </td>
      <td><%= train.user.name %></td>
      <td><%= train.line %></td>
      <td><%= train.body %></td>
      <td class="comment-count">コメント数： <%= train.train_comments.count %></td>
    </tr>
  <% end %>
</table>

<!-- ページング -->
<div class="pagination mx-auto">
  <%#= paginate @notifications %>
  <%= link_to_next_page @trains, '次のページ', class: "next" %>
</div>