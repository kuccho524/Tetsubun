<!--　いいね一覧テーブル -->
<table class="table table-hover table-inverse">
  <thead>
    <tr>
      <th></th>
      <th>ユーザ</th>
      <th>路線</th>
      <th>本文</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% favorites.each do |train| %>
      <tr>
        <td>
          <%= link_to train_path(train.id) do %>
            <%= attachment_image_tag(train, :train_image, size: "50x50", format: 'jpg', fallback: "no_image.jpg") %>
          <% end %>
        </td>
        <td>
          <%= link_to user_path(train.user) do %>
            <%= train.user.name %>
          <% end %>
        </td>
        <td><%= train.line %></td>
        <td><%= train.body %></td>
      </tr>
    <% end %>
  </tbody>
</table>