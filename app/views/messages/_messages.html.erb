<hr>
  <% if messages.present? %>
    <% messages.each do |message| %>
      <% if message.user == current_user %>
        <div class="right-message">
          <strong><%= message.message %></strong>
        </div>
      <% else %>
        <div class="left-message">
          <strong><%= message.message %></strong>
        </div>
      <% end %>
      <hr>
    <% end %>
  <% else %>
    <h3 class="text-center">メッセージはまだありません</h3>
  <% end %>