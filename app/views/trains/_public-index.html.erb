<!-- 非ユーザ向けの一覧表示 -->
<table class='table table-hover table-inverse'>
  <thead>
    <tr>
      <th></th>
      <th>投稿</th>
      <th>路線</th>
      <th>本文</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% trains.each do |train| %>
      <tr>
        <td><%= attachment_image_tag(train, :train_image, :fill, 50, 500, fallback: "no_image.jpg") %></td>
        <td><%= train.user.name %></td>
        <td><%= train.line %></td>
        <td><%= train.body %></td>
      </tr>
    <% end %>
  </tbody>
</table>