<!-- ユーザログイン時の一覧表示 -->
<table class='table table-hover table-inverse'>
  <thead>
    <tr>
      <th></th>
      <th>投稿</th>
      <th>路線</th>
      <th>本文</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% trains.each do |train| %>
      <tr>
        <td>
          <%= link_to train_path(train.id) do %>
            <%= attachment_image_tag(train, :train_image, :fill, 50, 50, format: 'jpg', fallback: "no_image.jpg") %>
          <% end %>
        </td>
        <td>
          <%= link_to user_path(train.user) do %>
            <%= train.user.name %>
          <% end %>
        </td>
        <td><%= train.line %></td>
        <td><%= train.body %></td>
        <td id="favorite_<%= train.id %>"><%= render 'favorites/favorite-btn', train: train %></td>
        <td class="comment-count">コメント数： <%= train.train_comments.count %></td>
      </tr>
    <% end %>
  </tbody>
</table>