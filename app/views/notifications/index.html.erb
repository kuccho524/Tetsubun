<div>
  <h4 class="sub-title">通知</h4>
  <% if @notifications.exists? or !@notifications.nil? %>
    <div class="users-index">
      <%= link_to '全削除する', notifications_destroy_all_path(@notifications), method: :delete %>
      <%= render 'notifications/notifications', notifications: @notifications %>
      <%= paginate @notifications %>
    </div>
  <% else %>
    <p>通知はありません</p>
  <% end %>
</div>