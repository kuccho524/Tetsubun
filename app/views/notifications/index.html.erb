<!-- 通知一覧画面 -->
<div class="container">
  <div class="row">
    <div class="col-sm-10 mx-auto">
      <h1 class="heading">通知一覧</h1>
    </div>
  </div>
  <div class="row">
    <div class="notification-index col-sm-10 mx-auto">
      <% if @notifications.exists? %>
        <%= render 'notifications/notifications', notifications: @notifications %>
        <%= paginate @notifications %>
      <% else %>
        <h3>通知はありません</h3>
      <% end %>
    </div>
  </div>
</div>