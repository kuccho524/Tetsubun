<% rooms.each do |room| %>
  <div class="card-deck mb-5 mr-2">
    <div class="card">
      <div class="card-image">
        <%= link_to room_path(room) do %>
          <%= attachment_image_tag(@user, :profile_image, width: "100%" , height: "125px", fallback: "no_image.jpg") %>
        <% end %>
      </div>
      <div class="card-body">
        <div class="card-name font-weight-bold">
          <%= opponent_user(room) %>
        </div>
        <div class="card-message">
          <%= most_new_message_preview(room) %>
        </div>
      </div>
    </div>
  </div>
<% end %>