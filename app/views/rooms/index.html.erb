<!-- チャットルーム一覧画面 -->
 <div class="container">
   <div class="row">
      <div class="col-sm-10 mx-auto">
        <h1 class="heading">チャットルーム一覧</h1>

        <!-- 各チャットの部屋を表示 -->
        <% if @rooms.empty? %>
          <h1 class="no-message">メッセージはありません</h1>
        <% else %>
          <section class="chat-rooms d-flex flex-row flex-wrap">
            <%= render 'rooms/chat-table', rooms: @rooms %>
          </section>
        <% end %>
      </div>
   </div>
 </div>