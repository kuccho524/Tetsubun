<!-- フォロワー一覧画面 -->
<div class="container">
  <div class="row">
    <div class="col-sm-12 mx-auto">
      <h1 class="heading">フォロワー一覧</h1>

      <!-- フォロワーがいる時といない時の表示 -->
      <% if @users.empty? %>
        <h3 class="no-followers text-center">ユーザはいません</h3>
      <% else %>
        <%= render 'relationships/index', users: @users %>
      <% end %>
    </div>
  </div>
</div>
