<!-- フォロー一覧画面 -->
<div class="container">
  <div class="row">
    <div class="col-sm-12 mx-auto">
      <h1 class="heading">フォロー一覧</h1>

      <!-- フォローしている時としていない時の表示 -->
      <% if @users.empty? %>
        <p>ユーザはいません</p>
      <% else %>
        <%= render 'relationships/index', users: @users %>
      <% end %>
    </div>
  </div>
</div>