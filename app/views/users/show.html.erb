<!-- マイページの画面 -->
<div class="container">
  <div class="row">
    <div class="col-sm-12 mx-auto">
      <h1 class="heading">マイページ</h1>
    </div>
  </div>
</div>


<div class="my-page col-sm-12 mx-auto">

  <!-- ユーザ情報を表示 -->
  <div class="user-info">
    <div class="col-sm3">
      <%= render 'users/info', user: @user %>
    </div>

    <!-- ユーザが投稿した履歴を表示 -->
    <div class="col-sm-9">
      <%= render 'users/user-trains', trains: @trains %>
    </div>
  </div>
</div>

<!-- ページング -->
<div class="pagination mx-auto">
  <%= paginate @trains %>
</div>

  <!-- 投稿一覧ページとTop画面へのリンクを表示 -->
  <div class="row">
    <div class="links col-sm-12 mx-auto text-center">
      <%= link_to '投稿一覧へ', trains_path, class: "btn btn-primary" %>　|　<%= link_to 'ホームへ', root_path, class: "btn btn-secondary", data: {"turbolinks" => false} %>
    </div>
  </div>
</div>